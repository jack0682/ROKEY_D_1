<?xml version="1.0"?>
<package format="3">
  <name>yolov7_ros2</name>
  <version>0.1.0</version>
  <description>YOLOv8 inference ROS2 package using Ultralytics and rclpy</description>

  <maintainer email="you@example.com">Your Name</maintainer>
  <license>MIT</license>

  <!-- Build tool -->
  <buildtool_depend>ament_python</buildtool_depend>

  <!-- Runtime dependencies -->
  <exec_depend>rclpy</exec_depend>
  <exec_depend>sensor_msgs</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>cv_bridge</exec_depend>
  <exec_depend>vision_msgs</exec_depend>
  <exec_depend>ultralytics</exec_depend> <!-- Optional: for colcon to check -->

  <!-- Export build type for Python package -->
  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
